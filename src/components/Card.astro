---
export interface Props {
	title: string;
	body: string;
	href: string;
	target?: string;
}

const { href, title, body, target } = Astro.props;
---
<div class="container">
    <div class="link-card">
	    <a target={target || "_blank"} href={href}>
		    <h2>
			    {title}
			    <span>&rarr;</span>
		    </h2>
		    <p>
			    {body}
		    </p>
	    </a>
    </div>
</div>
<style>
	.link-card {
		display: flex;
		text-align: center;
		background-color: #dec2cb;
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
		height: 10rem;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: black;
		background-color: #dec2cb;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	    box-shadow:
        0px 0px 1.6px rgba(0, 0, 0, 0.015),
        0px 0px 4.5px rgba(0, 0, 0, 0.029),
        0px 0px 10.9px rgba(0, 0, 0, 0.058),
        0px 0px 36px rgba(0, 0, 0, 0.14)
        ;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-darker));
	}

	.container{
	    width: 100%;
	}

	@media only screen and (min-width: 762px){
	    .container{
	        width: 65%;
	    }
	}
</style>
